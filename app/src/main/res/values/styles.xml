<resources>


    <style name="SimpleDialog" parent="@android:style/Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--按钮-->

    <!--白底蓝字-->
    <style name="btn_whitebg_corner4dp" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/btn_bg_white</item>
        <item name="android:background">@drawable/btn_bg_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!--蓝底白字-->
    <style name="btn_bluebg_corner4dp" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/btn_bg_blue</item>
        <item name="android:background">@drawable/btn_bg_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="full_button_press_style">
        <item name="android:background">@drawable/full_btn_press</item>
        <item name="android:textColor">@color/com_btn_press</item>
    </style>

    <!--键盘-->
    <style name="keyboard_number">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">1</item>
    </style>


    <style name="keyboard_layout">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!--签名-->
    <declare-styleable name="SignatureView">
        <attr name="minWidth" format="float" />
        <attr name="maxWidth" format="float" />
        <attr name="penColor" format="color" />
        <attr name="velocityFilterWeight" format="float" />
    </declare-styleable>

</resources>
