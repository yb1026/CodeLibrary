<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_solf_keyboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eb"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/com_board_hint_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:src="@mipmap/icon_down" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/com_one_lay"
            style="@style/keyboard_layout">

            <TextView
                android:id="@+id/com_one_text"
                style="@style/keyboard_number"
                android:text="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/com_two_lay"
            style="@style/keyboard_layout">

            <TextView
                android:id="@+id/com_two_text"
                style="@style/keyboard_number"
                android:text="2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/com_three_lay"
            style="@style/keyboard_layout">

            <TextView
                android:id="@+id/com_three_text"
                style="@style/keyboard_number"
                android:text="3" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/com_four_lay"
            style="@style/keyboard_layout">

            <TextView
                android:id="@+id/com_four_text"
                style="@style/keyboard_number"
                android:text="4" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/com_five_lay"
            style="@style/keyboard_layout">

            <TextView
                android:id="@+id/com_five_text"
                style="@style/keyboard_number"
                android:text="5" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/com_six_lay"
            style="@style/keyboard_layout">

            <TextView
                android:id="@+id/com_six_text"
                style="@style/keyboard_number"
                android:text="6" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/com_seven_lay"
            style="@style/keyboard_layout"
            android:layout_weight="1">

            <TextView
                android:id="@+id/com_seven_text"
                style="@style/keyboard_number"
                android:text="7" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/com_eight_lay"
            style="@style/keyboard_layout">

            <TextView
                android:id="@+id/com_eight_text"
                style="@style/keyboard_number"
                android:text="8" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/com_nine_lay"
            style="@style/keyboard_layout">

            <TextView
                android:id="@+id/com_nine_text"
                style="@style/keyboard_number"
                android:text="9" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/com_sure_lay"
            style="@style/keyboard_layout"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/com_sure_text"
                style="@style/keyboard_number"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/com_zero_lay"
            style="@style/keyboard_layout">

            <TextView
                android:id="@+id/com_zero_text"
                style="@style/keyboard_number"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/com_delete_imgbt"
            style="@style/keyboard_layout"
            android:gravity="center">

            <ImageView
                android:id="@+id/com_delete_imgbt1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_keyboard_delete" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>